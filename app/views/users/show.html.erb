<h1>Goals</h1>

<form action="<%= goals_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <ul>
    <% if current_user == @user %>
      <%= render @user.goals %>
    <% else %>
      <%= render @user.public_goals %>
    <% end %>
  </ul>

  <label>
    Title
    <input type="text" name="goal[title]">
  </label>
  <br>
  <label>
    Description
    <br>
    <textarea
      name="goal[description]"
      rows="8"
      cols="40"
      placeholder="Describe your goal!"
      ></textarea>
  </label>
  <br>
  <!-- <input type="hidden" name="goal[private]" value="false"> -->
  <label>
    Private
    <input type="checkbox" name="goal[private]" value="true">
  </label>
  <br>
  <input type="submit" value="Create New Goal">

</form>
